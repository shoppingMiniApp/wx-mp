.generalHead {
  display: flex;
  /* flex-direction: column; */
  align-items: center;
}

.usermotto {
  margin-top: 200px;
}

/* 分类样式 */
.nav {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  /* border-bottom: 1px solid #999; */
}

.nav view {
  /* width:20%; */
  display: inline-block;
  padding: 10rpx 16rpx;
  white-space: normal;
  text-align: center;
  /* background-color: rgb(158, 37, 37); */
  margin: 0 4rpx;
}

.navborder {
  border-bottom: 4rpx solid #fba414;
  color: #fba414;
}

.navbordernone {
  border: none;
  color: #000;
}

/* 轮播 */
swiper {
  width: 100%;
  height: calc(100vw * 280 / 520);
}

swiper-item {
  width: 100%;
  height: 400rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* promise */
.promise {
  display: flex;
}

.promise text {
  width: 33.3%;
  display: inline-block;
  text-align: center;
  padding: 20rpx 12rpx;
  border-bottom: 1px solid #999;
}

/* recommended */
.recommended {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #999;
}

.recommended > view {
  width: 25%;
  /* height: 150rpx; */
  overflow: hidden;
  padding: 16rpx 8rpx 0rpx 8rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 24rpx;
}

.retext {
  padding: 0;
  margin: 0;
  text-align: center;
  margin-top: -20rpx;
}

.recommended > view image {
  width: 100%;
  height: 170rpx;
  object-fit: cover;
}

/* main */
.main {
  margin-top: 12rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 8rpx;
}

.main > view {
  width: 49%;
  /* box-shadow: 0 0 3px #ccc7; */
  border-radius: 10rpx;
  margin-top: 16rpx;
}

.main > view view {
  width: 100%;
  /* padding: 4px; */
}
.img {
  width: 100%;
  /* background-color: rgb(41, 195, 131); */
  overflow: hidden;
}

.img image {
  width: 100%;
  height: 360rpx;
}

.img + view {
  box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.3);
  padding: 0 4rpx;
  border-radius: 0 0 20rpx 20rpx;
  margin-bottom: 16rpx;
  margin-top: -8rpx;
}

.info {
  font-size: 28rpx;
  padding: 0 15rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #555;
  height: 70rpx;
}

.main > view view view {
  padding: 12rpx 15rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
}

.main > view view view view {
  position: absolute;
  width: 90%;
  height: 340rpx;
  background-color: rgba(0, 0, 0, 0.3);
  /* background-color: rgb(170, 27, 27); */

  color: #fba414;
  font-size: 48rpx;
  top: -380%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.price {
  font-weight: bold;
}

.price sup {
  font-size: 25rpx;
}

.hide {
  padding: 0 20rpx;
}

/* 其他分类 商品列表样式*/
.classify {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 15rpx;
}
.classify > view {
  width: 49%;
  box-shadow: 0 0 6rpx #ccc7;
  border-radius: 10rpx;
  margin-top: 16rpx;
}
.classify > view image {
  width: 100%;
  height: 360rpx;
}
.infos {
  padding: 0 15rpx;
}
.register view {
  text-align: center;
  /* padding: 10rpx 0; */
}
.register button {
  padding: 0 !important;
  width: 50% !important;
}
.cart {
  /* padding: 0 25rpx; */
}
.cartListContent {
  width: 100%;
  padding: 0 25rpx;
  box-sizing: border-box;
}
.cartList {
  width: 100%;
  display: flex;
  align-items: center;
  background: #eee;
  border-radius: 10rpx;
  padding: 15rpx 0;
  margin: 25rpx 0;
  box-sizing: border-box;
}
.checkIcon {
  width: 50rpx;
  height: 50rpx;
  /* background: #000; */
  border-radius: 50%;
  flex-shrink: 0;
  border: 2rpx solid #fba414;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 25rpx;
}

.cartItem {
  display: flex;
  width: 100%;
  /* background: coral; */
}
.cartItem image {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx solid #eee;
  background: #fef5e7;
  border-radius: 10rpx;
  /* margin: 0 15rpx; */
  flex-shrink: 0;
  flex-grow: 0;
}
.cartItem_right {
  flex-grow: 1;
  width: 100%;

  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* background: coral; */
  padding: 0 25rpx;
  box-sizing: border-box;
}
.cartItem_bottom {
  display: flex;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
}
.cartItem_name {
  width: 360rpx;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.cartItem_number {
  display: flex;
  align-items: center;
  background: #fddaa1;
  border-radius: 6rpx;
  /* height: ; */
}
.itemNum input {
  display: flex;
  align-items: center;
  width: 50rpx;
  height: 40rpx;
  background: #fff;
  font-size: 20rpx;
  padding: 0 5rpx;
  box-sizing: border-box;
  text-align: center;
}
.cartItem_price {
  color: #f00;
}
.cartItem_price span {
  font-size: 27rpx;
}
.cartButton {
  width: 100%;
  background: blanchedalmond;
  position: fixed;
  bottom: 124rpx;
  z-index: 2;
}
.bottomBox {
  background: #fff;
  width: 100%;
  height: 26rpx;
  position: fixed;
  bottom: 0rpx;
  /* z-index: 1; */
}
